<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fourth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:clipToPadding="false"
    tools:context="com.alperen_coskun.FourthActivity">

    <TextView
        android:text="@string/info"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="-34dp"
        android:layout_marginRight="-34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:gravity="center"
        android:background="@color/material_purple"
        android:textColor="#ffff"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ilksayfa"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/imageView"
            android:clickable="true"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ikincisayfa"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/imageView2"
            android:clickable="true"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ucuncusayfa"
            android:textSize="18sp"
            android:scrollbars="vertical"
            android:maxLines="20"
            android:gravity="center"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/imageView3"
            android:clickable="true"
            android:layout_gravity="end"
            android:layout_marginTop="4dp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
